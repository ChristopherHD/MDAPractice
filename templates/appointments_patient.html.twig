{% extends "index.html.twig" %}

{% block content %}

	{% if app.user.roles[0] == 'ROLE_USER' %}
	
		{% for appoint in appointments %}
		
			<div class="block">
				<div class="block-title"> {{ appoint.date | date('m-d-Y H:i:s') }} </div>
				<div class="center">Cita con el doctor: {{ appoint.doctor.username }} </div>
			</div>	
			
		{% endfor %}
	
	{% endif %}
	
{% endblock %}