{% extends "/index.html.twig" %}
{% block title %}Doctor Profile{% endblock %}
{% block page_title %}Profile{% endblock %}
{% block content %}

	{% if error is not null %}
		<div class="error-block">
			{{ error }}
		</div>
	{% endif %}

	<div class="block">
		<div class="block-title"> Doctor Information</div>
		<div class="center">
			<div class="profile-table">
				<div class="column">
					<div><b>Name:&nbsp;&nbsp;</b>{{ doctor.getUsername() }}</div>
					<div><b>DNI/NIF:&nbsp;&nbsp;</b>{{ doctor.getDni() }}</div>
				</div>
				<div class="column">
					<div><b>Specialty:&nbsp;&nbsp;</b>{{ doctor.getSpecialty() }}</div>
					<div><b>Phone:&nbsp;&nbsp;</b>{{ doctor.getPhone() }}</div>
				</div>

			</div>

		</div>
	</div>

		<div class="block-option">
			<div class="row-option">
				<div class="column">Next Appointments <div class="row"><a href="#">17-23-1992</a> | <a href="#">17-23-1992</a></div>


				</div>

				<div class="column align-center">
					<a class='button' href="{{ path('generateAppointment',{'doctor': doctor.getDni()}) }}">Add Appointment</a>
				</div>
			</div>
		</div>
	
{% endblock %}